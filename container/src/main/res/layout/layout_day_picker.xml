<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ivCancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10dp"
        android:src="@mipmap/del"/>
    <ImageView
        android:id="@+id/ivOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/size_10dp"
        android:src="@drawable/icon_xuanze"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ivOK"
            android:orientation="horizontal"
            android:padding="4dp">
            <com.esri.arcgisruntime.container.monitoring.view.QNumberPicker
                android:id="@+id/npYear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1" />

            <com.esri.arcgisruntime.container.monitoring.view.QNumberPicker
                android:id="@+id/npMonth"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1" />

            <com.esri.arcgisruntime.container.monitoring.view.QNumberPicker
                android:id="@+id/npDay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1" />
        </LinearLayout>


</RelativeLayout>