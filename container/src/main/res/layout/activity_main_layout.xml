<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:gravity="center"
            android:background="@color/blue"
            android:textColor="@android:color/white"
            android:text="@string/realtime_monitoring"
            android:textSize="@dimen/title_size"
            />


        <FrameLayout
            android:id="@+id/framlayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></FrameLayout>

        <!-- 底部导航栏 -->
        <RadioGroup
            android:id="@+id/main_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@android:color/white">

                <!--<View-->
                    <!--android:layout_weight="0.15"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="30dp"/>-->

                <RadioButton
                    android:id="@+id/rbRealtimeMonitoring"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/bottom_realtime_monitoring"
                    android:gravity="center_horizontal"
                    android:drawablePadding="3dp"
                    android:paddingLeft="0dp"
                    android:textSize="13sp"
                    android:text="@string/realtime_monitoring"
                    android:textColor="@color/bottom_text_color"/>

                <RadioButton
                    android:id="@+id/rbFindRoute"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableTop="@drawable/find_route"
                    android:gravity="center_horizontal"
                    android:text="@string/find_route"
                    android:drawablePadding="3dp"
                    android:paddingLeft="0dp"
                    android:textSize="13sp"
                    android:textColor="@color/bottom_text_color"/>

                <RadioButton
                    android:id="@+id/rbBillQuery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawablePadding="3dp"
                    android:drawableTop="@drawable/bill_query"
                    android:gravity="center_horizontal"
                    android:paddingLeft="0dp"
                    android:text="@string/bill_query"
                    android:textColor="@color/bottom_text_color"
                    android:textSize="13sp" />

                <RadioButton
                    android:id="@+id/rbBusinessQuery"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/business_query"
                    android:gravity="center_horizontal"
                    android:drawablePadding="3dp"
                    android:paddingLeft="0dp"
                    android:textSize="13sp"
                    android:text="@string/business_query"
                    android:textColor="@color/bottom_text_color"/>

                <RadioButton
                    android:id="@+id/rbPersonal"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/personal"
                    android:gravity="center_horizontal"
                    android:drawablePadding="3dp"
                    android:paddingLeft="0dp"
                    android:textSize="13sp"
                    android:text="@string/personal"
                    android:textColor="@color/bottom_text_color"/>


                <!--<View-->
                    <!--android:layout_weight="0.15"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="10dp"/>-->
        </RadioGroup>

</LinearLayout>
